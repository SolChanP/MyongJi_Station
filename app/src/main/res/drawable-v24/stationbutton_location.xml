<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:startColor="#d699dc"
                android:centerColor="#d699dc"
                android:endColor="#d699dc"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <size
        android:width="30dp"
        android:height="30dp"
        />

    <padding

        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval" >
            <solid android:color="#1ff810" />
        </shape>
    </item>
</layer-list>