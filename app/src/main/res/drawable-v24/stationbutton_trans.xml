<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:startColor="#D44A3A"
                android:centerColor="#374BCC"
                android:endColor="#D7B817"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <size
        android:width="30dp"
        android:height="30dp"
        />

    <padding

        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval" >
            <solid android:color="#fff" />
        </shape>
    </item>
</layer-list>